          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", home_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", contact_index_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <%= yield %>
    </div>


  
